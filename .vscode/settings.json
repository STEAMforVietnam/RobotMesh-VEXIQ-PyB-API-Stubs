{
  "editor.rulers": [79],

  "files.exclude": {
    "dist": true,
    "docs/_build": true,
    "docs/_static": true,
    "docs/*.html": true,
    "docs/*.rst": true,
    "**/*.egg-info": true,
    "**/.git": true,
    "**/.mypy_cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ropeproject": true,
    ".vscode/*.log": true
  },

  "python.analysis.diagnosticSeverityOverrides": {
    "reportShadowedImports": "none"
  }
}
